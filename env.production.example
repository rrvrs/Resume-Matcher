# Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Application
ENV=production
DEBUG=false
PROJECT_NAME="Resume Matcher"
API_VERSION=v1

# Database
DB_USER=resume_user
DB_PASSWORD=your-secure-database-password
DATABASE_URL=postgresql+asyncpg://resume_user:your-secure-database-password@postgres:5432/resume_matcher
SYNC_DATABASE_URL=postgresql://resume_user:your-secure-database-password@postgres:5432/resume_matcher
ASYNC_DATABASE_URL=postgresql+asyncpg://resume_user:your-secure-database-password@postgres:5432/resume_matcher
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_RECYCLE=3600

# Redis Cache
REDIS_URL=redis://redis:6379/0
CACHE_TTL=300
CACHE_KEY_PREFIX=resume_matcher:

# Security
SESSION_SECRET_KEY=your-very-long-random-session-secret-key
JWT_SECRET_KEY=your-very-long-random-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
BCRYPT_ROUNDS=12

# CORS
ALLOWED_ORIGINS=["https://resume-matcher.com","https://www.resume-matcher.com"]
CORS_MAX_AGE=86400

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=[".pdf",".docx",".doc",".txt"]
UPLOAD_CHUNK_SIZE=1048576

# Celery Background Tasks
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
TASK_TIMEOUT=300

# Ollama AI
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=gemma3:4b
OLLAMA_TIMEOUT=120

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
APM_ENABLED=true
METRICS_ENABLED=true

# Performance
REQUEST_TIMEOUT=30
SLOW_QUERY_THRESHOLD=0.5

# Frontend URLs
NEXT_PUBLIC_APP_URL=https://resume-matcher.com
NEXT_PUBLIC_API_URL=https://api.resume-matcher.com

# Grafana
GRAFANA_PASSWORD=your-secure-grafana-password

# Email (if needed)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@resume-matcher.com

# AWS S3 (for file storage if needed)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=resume-matcher-uploads
AWS_REGION=us-east-1

# Cloudflare (if using)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id 